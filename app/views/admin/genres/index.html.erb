<div class="row">
  <div class="col-md-4">
    <%= form_with model: @genre, url: new_admin_genre_path, local: true do |f| %>
      <%= f.label :genre_image, '画像' %>
      <%= f.file_field :genre_image, autofocus: true %>
      <br>
      <%= f.label :name, 'ジャンル名' %>
      <br>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.submit '追加', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <table class="table table-border">
      <thead>
        <th>画像</th>
        <th>ジャンル名</th>
        <th></th>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= attachment_image_tag genre, :genre_image, fallback: 'others/no_image.jpg', size: '100x100' %></td>
            <td><%= genre.name %></td>
            <td>
              <%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-primary' %>
              <%= link_to '削除', admin_genre_path(genre), method: :delete, class: 'btn btn-danger' %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <%= paginate @genres %>
</div>

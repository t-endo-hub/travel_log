<h3>シーン編集</h3>
<div class="row">
  <div class="col-md-8">
    <%= form_with model: @scene, url: edit_admin_scenes_path, local: true, builder: CustomFormBuilder do |f| %>
      <%= f.label :scene_image, '画像' %>
      <br>
      <%= attachment_image_tag @scene, :scene_image, fallback: 'no_image.jpg', size: '400x400' %>
      <br>
      <%= f.file_field :scene_image, autofocus: true %>
      <br>
      <%= f.label :name, 'シーン名' %>
      <br>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.submit '追加', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

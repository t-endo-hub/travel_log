<% if tourist_spot.wented_by?(current_user) %>
  <%= link_to tourist_spot_wents_path(tourist_spot), method: :delete, remote: true, class: 'btn btn-default', style: 'border-color: green;' do %>
    <i class="fas fa-check-circle" style='color: green;'></i>
    <%= tourist_spot.wents.count %>
    行った！
  <% end %>
<% else %>
  <%= link_to tourist_spot_wents_path(tourist_spot), method: :post, remote: true, class: 'btn btn-default' do %>
    <i class="fas fa-check-circle"></i>
    <%= tourist_spot.wents.count %>
    行った！
  <% end %>
<% end %>

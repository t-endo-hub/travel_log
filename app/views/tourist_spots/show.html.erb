<h3>観光地詳細</h3>
<% if @tourist_spot.wented_by?(current_user) %>
  <%= link_to tourist_spot_went_path(@tourist_spot), method: :delete, class: 'btn btn-primary', style: 'border-color: green' do %>
    <%= @tourist_spot.wents.count %>
    行った
  <% end %>
<% else %>
  <%= link_to tourist_spot_wents_path(@tourist_spot), method: :post, class: 'btn btn-primary', style: 'border-color: green' do %>
    <%= @tourist_spot.wents.count %>
    行った
  <% end %>
<% end %>

<% if @tourist_spot.favorited_by?(current_user) %>
  <%= link_to tourist_spot_favorite_path(@tourist_spot), method: :delete, class: 'btn btn-success', style: 'border-color: green' do %>
    <%= @tourist_spot.favorites.count %>
    行きたい
  <% end %>
<% else %>
  <%= link_to tourist_spot_favorites_path(@tourist_spot), method: :post, class: 'btn btn-success', style: 'border-color: green' do %>
    <%= @tourist_spot.favorites.count %>
    行きたい
  <% end %>
<% end %>

<%= link_to 'レビュー一覧', tourist_spot_reviews_path(@tourist_spot) %>
<%= link_to 'レビューを書く', new_tourist_spot_review_path(@tourist_spot) %>

<div class="row">
  <div class="col-md-8 mx-auto">
    <table class="table table-bodered">
      <tr>
        <th>画像</th>
        <td><%= attachment_image_tag @tourist_spot, :spot_image, format: 'jpeg', size: '200x150' %></td>
      </tr>
      <tr>
        <th>観光地名</th>
        <td><%= @tourist_spot.name %></td>
      </tr>
      <tr>
        <th>紹介文</th>
        <td><%= @tourist_spot.introduction %></td>
      </tr>
      <tr>
        <th>アクセス</th>
        <td><%= @tourist_spot.access %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @tourist_spot.phone_number %></td>
      </tr>
      <tr>
        <th>営業時間</th>
        <td><%= @tourist_spot.business_hour %></td>
      </tr>
      <tr>
        <th>駐車場</th>
        <td><%= @tourist_spot.is_parking %></td>
      </tr>
    </table>
    <%= link_to '編集', edit_tourist_spot_path(@tourist_spot), class: 'btn btn-primary' %>
  </div>
</div>
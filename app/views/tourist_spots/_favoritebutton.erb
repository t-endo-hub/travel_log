<% if tourist_spot.favorited_by?(current_user) %>
  <%= link_to tourist_spot_favorite_path(tourist_spot), method: :delete, remote: true, class: 'btn btn-default', style: 'border-color: #FF9933;' do %>
    <i class="fas fa-star" style='color: #FF9933'></i>
    <%= tourist_spot.favorites.count %>
    行きたい！
  <% end %>
<% else %>
  <%= link_to tourist_spot_favorites_path(tourist_spot), method: :post, remote: true, class: 'btn btn-default' do %>
    <i class="far fa-star"></i>
    行きたい！
  <% end %>
<% end %>
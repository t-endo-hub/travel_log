<div class="row">
  <div class="col-md-7">
    <div class="row">
      <div class="page-header">
        <h3>
          <i class="fas fa-list-ul"></i>
          ジャンルから探す
        </h3>
      </div>
    </div>
    <div class="row">
      <% @genres.each do |genre| %>
        <div class="col-md-4">
          <%= link_to tourist_spot_genre_search_path(genre_search: genre.id) do %>
            <%= attachment_image_tag genre, :genre_image, fallback: 'no_image.jpg', size: '150x150' %>
            <p><%= genre.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
          

    <div class="row">
      <div class="page-header">
        <h3>
          <i class="fas fa-bullseye"></i>
          利用シーンから探す
        </h3>
      </div>
    </div>
    <div class="row">
      <% @scenes.each do |scene| %>
        <div class="col-md-4">
          <%= link_to tourist_spot_scene_search_path(scene_search: scene.id) do %>
            <%= attachment_image_tag scene, :scene_image, fallback: 'no_image.jpg', size: '150x150' %>
            <p><%= scene.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="page-header">
        <h3>
          <i class="fas fa-globe-asia"></i>
          都道府県から探す
        </h3>
      </div>
    </div>
    <div class="row">
      <% JpPrefecture::Prefecture.all.each do |prefecture| %>
        <div class="col-md-4">
          <%= link_to tourist_spot_prefecture_search_path(prefecture_search: prefecture.code) do %>
            <%= image_tag "prefectures/#{ prefecture.name }.jpg", class: 'img-responsive img-rounded img-hover top-image' %>
            <p><%= prefecture.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-4">
    <%= render 'layouts/sidebar', tourist_spots_fav: @tourist_spots_fav,
                                  tourist_spots_pv: @tourist_spots_pv %>
  </div>
</div>


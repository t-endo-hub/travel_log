<% if user_signed_in? %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー解除', user_unfollow_path(user.id), method: :POST, class: 'btn btn-info', remote: true %>
  <% else %>
    <%= link_to 'フォロー', user_follow_path(user.id), method: :POST, class: 'btn btn-default', remote: true %>
  <% end %>
<% end %>
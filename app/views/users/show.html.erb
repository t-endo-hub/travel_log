<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table">
      <tbody class="text-center">
        <tr>
          <td>
            <h3>
            </h3>
              <% case @user.rank when 'レギュラー' %>
                <div class="label label-default">
                  <%= @user.rank %>
                  <div class="badge">
                    <%= @user.point %>
                  </div>
                </div>
              <% when 'シルバー' %>
                <div class="label label-primary">
                  <%= @user.rank %>
                  <div class="badge">
                    <%= @user.point %>
                  </div>
                </div>
              <% when 'ゴールド' %>
                <div class="label label-warning">
                  <%= @user.rank %>
                  <div class="badge">
                    <%= @user.point %>
                  </div>
                </div>
              <% when 'プラチナ' %>
                <div class="label label-info">
                  <%= @user.rank %>
                  <div class="badge">
                    <%= @user.point %>
                  </div>
                </div>
              <% when 'ダイヤモンド' %>
                <div class="label label-danger">
                  <%= @user.rank %>
                  <div class="badge">
                    <%= @user.point %>
                  </div>
                </div>
              <% end %>
            </h3>
            <% if @user == current_user %>
              <p>
                次のランクまであと
                <%= @user.next_rank(@user) %>
                ポイント
              </p>
            <% end %>
            <div>
              <%= attachment_image_tag @user, :profile_image, size: '400x400', fallback: 'others/no_image.jpg', class: 'img-thumbnail img-responsive' %>
              <br>
              <h4>
                <strong>
                  <%= @user.name %>
                  (
                  <%= @user.age %>
                  歳
                  <%= @user.sex %>
                  )
                </strong>
              </h4>
              <br>

              <% if @user == current_user %>
                <%= link_to 'プロフィールを編集', edit_user_path(@user), class: 'btn btn-primary' %>
                <%= link_to '退会', user_path(@user), method: :delete, date: { confirm: '本当に退会しますか' }, class: 'btn btn-danger margin-left--10px' %>
                <br>
              <% end %>

              <% if user_signed_in? %>
                <% unless @user == current_user %>
                  <div id="followbutton-<%= @user.id %>">
                    <%= render 'users/followbutton', user:@user %>
                  </div>
                  <% if @is_room == true %>
                    <%= link_to 'メッセージ', room_path(@room_id), class: 'btn btn-success' %>
                  <% else %>
                    <%= form_with model: @room, local: true do |f| %>
                      <%= fields_for @entry do |e| %>
                        <%= e.hidden_field :user_id, value: @user.id %>
                      <% end %>
                      <%= f.submit 'メッセージ', class: 'btn btn-success' %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>

              <br>
              <p><%= @user.introduction %></p>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item" role='presentation'>
      <%= link_to 'ユーザートップ', user_path(@user) %>
    </li>
    <li class="nav-item" role='presentation'>
      <%= link_to '行った観光地', '#' %>
    </li>
    <li class="nav-item" role='presentation'>
      <%= link_to '行きたい観光地', '#' %>
    </li>
    <li class="nav-item" role='presentation'>
      <%= link_to "#{ @user.follower.count }フォロー中", following_path(@user) %>
    </li>
    <li class="nav-item" role='presentation'>
      <%= link_to "#{ @user.followed.count }フォロワー", follower_path(@user) %>
    </li>
  </ul>
  </div>
</div>

<div class="row">
  <%= render 'reviews/reviews', reviews: @reviews %>
</div>

<div class="row">
  <%= paginate @reviews %>
</div>

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_with model: @comment, url: user_tourist_spot_review_comment_path(@comment.review.tourist_spot, @comment.review, @comment), local: true do |f| %>
      <%= f.label :title, 'タイトル' %>
      <br>
      <%= f.text_field :title, class: 'form-control' %>
      <br>

      <%= f.label :body, '本文' %>
      <br>
      <%= f.text_area :body, class: 'form-control', style: 'height: 100px;' %>
      <br>
      <%= f.submit '保存', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>

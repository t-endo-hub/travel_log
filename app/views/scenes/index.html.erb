<div class="row">
  <div class="col-md-4">
    <%= form_with model: @scene, local: true do |f| %>
      <%= f.label :scene_image, '画像' %>
      <%= f.file_field :scene_image, autofocus: true %>
      <br>
      <%= f.label :name, 'シーン名' %>
      <br>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.submit '追加', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <table class="table table-border">
      <thead>
        <th>画像</th>
        <th>シーン名</th>
        <th></th>
      </thead>
      <tbody>
        <% @scenes.each do |scene| %>
          <tr>
            <td><%= attachment_image_tag scene, :scene_image, fallback: 'no_image_jpg', size: '100x100' %></td>
            <td><%= scene.name %></td>
            <td>
              <%= link_to '編集', edit_scene_path(scene), class: 'btn btn-primary' %>
              <%= link_to '削除', scene_path(scene), method: :delete, class: 'btn btn-danger' %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
